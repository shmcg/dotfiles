# Dracula Theme

# Color Definitions
BACKGROUND='#282a36'
BACKGROUND24='#52576f'
SELECTION='#44475a'
SELECTION_ACCENT='#6f6a83'
FOREGROUND='#f8f8f2'
FOREGROUND8='#eaead9'
FOREGROUND24='#cfcfa6'
COMMENT='#6272a4'
COMMENT_ACCENT='#778ca2' # '#8fb9d4'
CYAN='#8be9fd'
GREEN='#50fa7b'
ORANGE='#ffb86c'
ORANGE43='#cf6b00'
PINK='#ff79c6'
PURPLE='#bd93f9'
RED='#ff5555'
RED_ACCENT='#ff6e67'
YELLOW='#f1fa8c'

# Setting theme.*.reset resets all attributes to a default value
hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1

hc set frame_border_active_color $COMMENT_ACCENT
hc set frame_border_normal_color $SELECTION
hc set frame_bg_active_color $COMMENT_ACCENT
hc set frame_bg_normal_color $SELECTION
hc set frame_border_width 2
hc set always_show_frame on
hc set frame_bg_transparent on
hc set frame_transparent_width 2
hc set frame_gap 8

hc attr theme.title_font 'Operator Mono Book:pixelsize=12:style=Italic'  # example using Xft
# hc attr theme.title_font '-*-fixed-medium-r-*-*-13-*-*-*-*-*-*-*'
hc attr theme.title_color $FOREGROUND
hc attr theme.normal.title_color $FOREGROUND8
hc attr theme.title_height 12
hc attr theme.padding_top 2  # space below the title's baseline (i.e. text depth)
hc attr theme.border_width 5
hc attr theme.active.color $COMMENT
hc attr theme.normal.color $SELECTION
hc attr theme.urgent.color $RED
hc attr theme.inner_width 1
hc attr theme.inner_color $BACKGROUND
hc attr theme.outer_width 1
hc attr theme.active.inner_color $COMMENT_ACCENT
hc attr theme.urgent.inner_color $RED_ACCENT
hc attr theme.normal.inner_color $SELECTION_ACCENT

# copy inner color to outer_color
for state in active urgent normal ; do
    hc substitute C theme.${state}.inner_color \
        attr theme.${state}.outer_color C
done

# Floating Specific Attributes
hc attr theme.floating.outer_width 1
hc attr theme.floating.outer_color $ORANGE43
hc attr theme.floating.inner_color $ORANGE43

# Set background when resizing and/or dragging windows
hc attr theme.background_color $BACKGROUND24

# gap between windows within one frame in the tiling mode
hc set window_gap 4
# padding within a frame in the tiling mode
hc set frame_padding 0
# window borders and gaps will be removed and minimal when there’s no ambiguity regarding the focused window
hc set smart_window_surroundings off
# frame borders and gaps will be removed when there’s no ambiguity regarding the focused frame
hc set smart_frame_surroundings on
# mouse_recenter_gap  Specifies the gap around a monitor.
# If the monitor is selected and the mouse position would be restored into this gap,
# it is set to the center of the monitor.
# This is useful, when the monitor was left via mouse movement, but is reselected by keyboard.
# If the gap is 0 (default), the mouse is never recentered.
hc set mouse_recenter_gap 20

# vim: filetype=sh
