[user]
	name = Sarah H. McGrath
	email = sarah@shmcgrath.com
[github]
	user = shmcgrath
[core]
	autocrlf = input
	editor = vim
	whitespace=warn,indent-with-non-tab,trailing-space,cr-at-eol
[alias]
	a = add --verbose
	an = add --dry-run --verbose
	br = branch
	ci = commit
	clr = rm -r --cached
	co = checkout
	com = checkout master
	df = diff
	dc = diff --cached
	dw = diff --ignore-all-space
	fu = fetch upstream
	# show files ignored by git
	ign = ls-files -o -i --exclude-standard
	lg = log --graph --date=format:'%Y-%m-%d %H:%M' --format=format:'%C(auto)%h %d%Creset%Cgreen%ad%Creset %aN <%aE>%n%Cblue%s%Creset%+b'
	lgd = log -p
	lgm = log --graph --author='Sarah H. McGrath' --date=format:'%Y-%m-%d %H:%M' --format=format:'%C(auto)%h %d%Creset%Cgreen%ad%Creset %aN <%aE>%n%Cblue%s%Creset%+b'
	lgp = log --date=format:'%Y-%m-%d %H:%M' --pretty=fuller
	ls = ls-files | less
	mum = merge upstream/master
	remote = remote -v
	rem = remote -v
	st = status -sb
[color]
	ui = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = kdiff3
[mergetool]
	prompt = false
