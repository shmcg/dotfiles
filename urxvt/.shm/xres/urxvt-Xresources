! urxvt
URxvt.perl-ext-common: default,clipboard,matcher
URxvt*geometry: 80x33
URxvt*loginShell: true
URxvt*scrollBar: false
URxvt*scrollBar_floating: false
URxvt*scrollBar_right: false
URxvt*urgentOnBell: true
URxvt*visualBell: true
URxvt*depth: 32
URxvt.background: [95]#282A36
!URxvt*foreground: lightgray
URxvt.font: xft:Operator Mono Book:size=10
URxvt.letterSpace: -1

! Copy selected text into CLIPBOARD as well as PRIMARY
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

! Clickable URLs
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold
